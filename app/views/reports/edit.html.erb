<% breadcrumb :edit_student_report %>
<h2>レポート課題：<%= @report.task_title %></h2><br>
<h4>提出日時：<%= @report.created_at.strftime('%Y-%m-%d %H:%M:%S') %></h4><h4><%= link_to 'プレビュー', preview_path(@report), target: '_blank' %></h4>
<table class="table table-striped">
  <thead>
  <tr>
    <th>レポートについてのフィードバック</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @report.ta_comment %></td>
  <tr>
  </tbody>
</table>

<h4>コメントする</h4>
<div class="container">
  <%= form_for @report, url: url_for(:controller => 'reports', :action => :update, :id => @report.id) do |f| %>
      <div class="field">
        <%= f.label :student_comment, :value => 'コメント' %><br>
        <%= f.text_field :student_comment, :class => 'form-control'%>
      </div><br>
      <div class="actions">
        <%= f.submit :class => 'btn btn-primary', :value => '以上の内容でコメントする'%>
      </div>
  <% end %>
</div>
