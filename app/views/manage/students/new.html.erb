<h1>学生追加登録</h1>
<%= form_for(@student, url: manage_students_path) do |f| %>
    <div class="field">
      <%= f.label :name, :value => '名前' %><br>
      <%= f.text_field :name, :class => 'form-control' %><br>
    </div>
    <div class="field">
      <%= f.label :password, :value => 'パスワード'%><br>
      <%= f.password_field :password, :class => 'form-control' %><br>
    </div>
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary btn-lg', :value => '登録' %>
    </div>
<% end %>