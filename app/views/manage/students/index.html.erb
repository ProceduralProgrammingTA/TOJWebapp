<% breadcrumb :manage_students %>
<h1>学生一覧</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>名前</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= link_to '提出状況', manage_student_path(student) %></td>
        <td><%= link_to '学生情報の編集', edit_manage_student_path(student) %></td>
        <td><%= link_to '削除', manage_student_path(student), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
